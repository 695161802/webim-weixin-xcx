.createGroup{
	background-color: #CFCFCF;
}
.create_input {
	width: 100%;
	height: 40px;
	display: flex;
	justify-content: center;
	align-items: center;
}
.create_input view {
	width: 92%;
	height: 30px;
	line-height: 40px;
	background-color: #ffffff;
	border-radius: 2px;
	text-align: center;
	display: flex;
	align-items: center;
	padding-left: 10px;
	text-align: left;
}
.create_input input {
	font-size: 14px;
	width: 90%;
}

.create_textarea{
	width: 100%;
	height: 150px;
	display: flex;
	justify-content: center;
	align-items: center;
}

.create_textarea view {
	width: 92%;
	height: 100%;
	line-height: 40px;
	background-color: #ffffff;
	border-radius: 2px;
	text-align: center;
	display: flex;
	padding-left: 10px;
	text-align: left;
}
.create_textarea textarea{
	padding-top: 7px;
	font-size: 14px;
	width: 100%;
	height: 100%;
}
.check_area{
	margin-top: 5px;
}
.check_area .checkbox-group{
	background:#fff;
	width:94%;
	margin:0 auto;
	border-radius:2px;
	padding:10px;
	box-sizing:border-box;
}
.check_area .checkbox-group .checkbox{
	display: block;
	font-size: 14px;
	line-height:30px;
}
.invite_text{
	font-size:14px;
	padding-left:12px;
	color:#333;
}
.friend_list {
	margin-top: 5px;
}

.friend_list .checkbox-group{
	background:#fff;
	width:94%;
	margin:0 auto;
	border-radius:2px;
	padding:10px;
	box-sizing:border-box;
}
.friend_list .checkbox-group .checkbox{
	display: block;
	font-size: 14px;
	line-height:30px;
}

.create_btn button{
	margin: 0 auto;
	width: 94%;
}
