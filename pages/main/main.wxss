.search,.search_input {
	width: 100%;
	height: 40px;
	background-color: #CFCFCF;
	display: flex;
	align-items: center;
	position: fixed;
	top:0;
	left:0;
}
.search {
	justify-content:space-around;
}
.search_input {
	justify-content:space-around;	
}
.search view, .search_input view {
	height: 28px;
	line-height: 40px;
	background-color: #ffffff;
	border-radius: 5px;
	text-align: center;
	display: flex;
	align-items: center;
}
.search view {
	width: 83%;
	justify-content:center;
}
.search image {
	display: block;
	width: 5%;
	height: 50%;
}
.search_input view {
	padding-left: 10px;
}
.search icon,.search_input icon {
	display: inline-block;
	margin: 13px 4px 0 0;
	height: 26px;
	line-height: 26px;
}
.search text {
	font-size: 12px;
	color: #CFCFCF;
}
.search_input view {
	width: 77%;
	text-align: left;
}
.search_input text {
	display: inline-block;
	width: 32px;
	font-size: 16px;
	color:#7B68EE;
}
.search_input input {
	font-size: 14px;
	width: 90%;
}
.contain {
	margin-top: 40px;
}
.chat,.chat_groups,.chat_lists{
	width: 100%;
	height: 45px;
	display: flex;
	align-items: center;
}
.chat,.chat_groups {
	border-bottom: 1px solid rgba(173,185,193,0.5);
}
.chat image {
	width: 6%;
	height: 50%;
	margin:0 13px 0 10px;
}
.chat_groups image {
	width: 8%;
	height: 54%;
	margin:0 10px 0 8px;
}
.chat_lists image {
	width: 12%;
	height:100%;
}
.chat text,.chat_groups text,.chat_lists text {
	font-size:14px;
}
.number {
	width: 100%;
	height: 60px;
}
.nbr_header {
	width: 100%;
	height: 20px;
	background-color: #D4D4D4;
	line-height: 20px;
	padding-left: 14px;
}
.nbr_body {
	width: 100%;
	height: 40px;
	display: flex;
	align-items: center;
}
.nbr_body image{
	width: 6%; 
	height: 50%;
	margin-left: 8px;
	margin-right: 13px;
}






.chatRoom_tab {
	width: 100%;
	height: 50px;
	background-color: rgb(250,251,252);
	position: fixed;
	bottom: 0;
	right: 0;
	border-top: 1px solid rgba(173,185,193,0.5);
	display: flex;
	justify-content: space-around;
}
.contacts,.settings {
	width: 47px;
	height: 37px;
	margin-top: 8px;
}
.chats {
	width: 35px;
	height: 37px;
	margin-top: 8px;
}
.contacts image,.settings image {
	width: 100%;
	height: 100%;
}
.chats image {
	width: 100%;
	height: 100%;
}