<view class="message" wx:for="{{ chatMsg }}" wx:key="time">
	<view class="time">
		<text>{{item.time}}</text>
	</view>
	<view class="main" class="{{ item.style }}">
		<view class="user">
			<text>{{ item.username }}</text>
		</view>
		<image class="avatar" src="../../images/number.png"></image>
		<text class="msg">{{ item.msg.data }}</text>
	</view>
</view>



<view class="room_bar">
	<image src="../../images/Audio.png" class="audio"></image>
	<input type="text"  class="news" placeholder="输入新消息" placeholder-style="color:#CFCFCF;padding-left:5px;" bindinput="bindMessage"></input>
	<image src="../../images/Emoji.png" class="emoj"></image>
	<text bindtap="sendMessage">发送</text>
</view>

<view class="other_btn">
	<view class="other_first">
		<image src="../../images/settingsActive.png"></image>
		<image src="../../images/settingsActive.png"></image>
		<image src="../../images/settingsActive.png"></image>
		<image src="../../images/settingsActive.png"></image>
	</view>
	<view class="other_second">
		<image src="../../images/settingsActive.png"></image>
