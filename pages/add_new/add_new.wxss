.search_input {
	width: 100%;
	height: 40px;
	background-color: #CFCFCF;
	display: flex;
	justify-content:space-around;
	align-items: center;
	position: fixed;
	top:0;
	left:0;
}
.search_input view {
	width: 80%;
	height: 28px;
	line-height: 40px;
	background-color: #ffffff;
	border-radius: 2px;
	text-align: center;
	display: flex;
	align-items: center;
	padding-left: 10px;
	text-align: left;
}
.search_input icon {
	display: inline-block;
	margin: 13px 4px 0 0;
	height: 26px;
	line-height: 26px;
}
.search_input text {
	display: inline-block;
	width: 32px;
	font-size: 16px;
	color:#7B68EE;
}
.search_input input {
	font-size: 14px;
	width: 90%;
}
